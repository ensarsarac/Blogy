@model List<CommentListByUserIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bloglarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Adı</th>
                                <th>Yorumum</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ArticleTitle</td>
                                    <td>@item.Content</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td><a href="/Writer/MyComments/DeleteComment/@item.CommentId" class="btn btn-outline-danger btn-fw">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>