@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model List<GetArticleByUserIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bloglarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Adı</th>
                                <th>Kategori</th>
                                <th>Tarih</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Yorumlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td><a href="#" class="btn btn-outline-danger btn-fw">Sil</a></td>
                                    <td><a href="#" class="btn btn-outline-warning btn-fw">Güncelle</a></td>
                                    <td><a href="/Writer/MyBlogs/BlogComments/@item.ArticleId" class="btn btn-outline-info btn-fw">Yorumlar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="#" class="btn btn-outline-success btn-fw">Yeni Blog Oluştur</a>
                </div>
            </div>
        </div>
    </div>
    
</div>

