@model List<GetMessatListDto>
<li class="nav-item dropdown d-none d-sm-flex">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-email-outline"></i>
        <span class="count count-varient2">@ViewBag.messagecount</span>
    </a>
    <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Mesajlar</h6>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item">
                <div class="preview-item-content flex-grow">
                    <div class="d-flex align-items-center">
                        <img src="~/UserImage/@item.SenderUserImageUrl" style="width:30px; height:30px;" class="rounded-pill img-thumbnail" />
                        <span class="badge badge-pill badge-success">@item.SenderUserName</span>

                    </div>

                    
                    @if(item.Detail.Length < 50)
                    {
                        <p class="text-small text-muted ellipsis mb-0"> @item.Detail </p>
                    }
                    else
                    {
                        <p class="text-small text-muted ellipsis mb-0"> @item.Detail.Substring(0,50) </p>
                    }
                </div>
                <p class="text-small text-muted align-self-start"> @item.Date.ToShortDateString() </p>
            </a>
        }
        
        
        
        <h6 class="p-3 mb-0">Tüm mesajları gör</h6>
    </div>
</li>