
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}

        <div class="row">
            <div class="col-xl-6 offset-3 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                <div class="card bg-warning">
                    <div class="card-body px-3 py-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="color-card">
                                <p class="mb-0 color-card-head">Blog Sayım</p>
                                <h2 class="text-white">
                            @ViewBag.blogcount
                                </h2>
                            </div>
                            <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                        </div>
                        <h6 class="text-white">Tüm zamanlar</h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 offset-3 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                <div class="card bg-danger">
                    <div class="card-body px-3 py-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="color-card">
                                <p class="mb-0 color-card-head">Yorum Sayım</p>
                                <h2 class="text-white">
                            @ViewBag.commentcount
                                </h2>
                            </div>
                            <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                        </div>
                        <h6 class="text-white">Tüm zamanlar</h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 offset-3 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                <div class="card bg-primary">
                    <div class="card-body px-3 py-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="color-card">
                                <p class="mb-0 color-card-head">Gelen Mesajlar</p>
                                <h2 class="text-white">
                            @ViewBag.incomingmessagecount
                                </h2>
                            </div>
                            <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                        </div>
                        <h6 class="text-white">Tüm zamanlar</h6>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 offset-3 col-md-6 stretch-card pb-sm-3 pb-lg-0">
                <div class="card bg-success">
                    <div class="card-body px-3 py-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="color-card">
                                <p class="mb-0 color-card-head">Giden Mesajlar</p>
                        <h2 class="text-white">@ViewBag.sendmessagecount</h2>
                            </div>
                            <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                        </div>
                <h6 class="text-white">Tüm zamanlar</h6>
                    </div>
                </div>
            </div>
        </div>
