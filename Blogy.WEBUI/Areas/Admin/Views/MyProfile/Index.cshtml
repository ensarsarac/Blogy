@model EditProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgilerim</h4>
                <p class="card-description"> Profil bilgilerini buradan düzenleyebilirsiniz. </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Ad</label>
                        <input type="text" class="form-control" id="exampleInputUsername1" asp-for="@Model.Name">
                        <span asp-validation-for="@Model.Name" style="color:red;"></span>

                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Soyad</label>
                        <input type="text" class="form-control" id="exampleInputUsername1" asp-for="@Model.Surname">
                        <span asp-validation-for="@Model.Surname" style="color:red;"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="exampleInputUsername1" asp-for="@Model.UserName">
                        <span asp-validation-for="@Model.UserName" style="color:red;"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" asp-for="@Model.Email">
                        <span asp-validation-for="@Model.Email" style="color:red;"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Görsel</label>
                        <img src="~/UserImage/@Model.Image" class="mb-3" style="width:100px;height:100px;" />
                        <input type="file" asp-for="@Model.ImageUrl" class="form-control" placeholder="Resim Yükleyin">
                        <span asp-validation-for="@Model.ImageUrl" style="color:red;"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Açıklama</label>
                        <textarea cols="10" rows="10" asp-for="Description" placeholder="Kendinizle alakalı kısa bir açıklama giriniz..." class="form-control" >@Model.Description </textarea>
                        <span asp-validation-for="@Model.Description" style="color:red;"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Şifre</label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputEmail1">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Şifre Tekrar</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputEmail1">
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

